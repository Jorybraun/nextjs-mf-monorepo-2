{
  "name": "nextjs-mf-monorepo",
  "version": "1.0.0",
  "description": "Next.js Module Federation monorepo with Segment analytics",
  "private": true,
  "workspaces": [
    "host-app",
    "remote-app",
    "product-app",
    "cart-app",
    "checkout-app",
    "shared"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "start": "npm run start --workspaces",
    "dev:host": "npm run dev --workspace=host-app",
    "dev:remote": "npm run dev --workspace=remote-app",
    "dev:product": "npm run dev --workspace=product-app",
    "dev:cart": "npm run dev --workspace=cart-app",
    "dev:checkout": "npm run dev --workspace=checkout-app",
    "build:host": "npm run build --workspace=host-app",
    "build:remote": "npm run build --workspace=remote-app",
    "build:product": "npm run build --workspace=product-app",
    "build:cart": "npm run build --workspace=cart-app",
    "build:checkout": "npm run build --workspace=checkout-app",
    "clean:next": "rm -rf ./host-app/.next ./remote-app/.next ./product-app/.next ./cart-app/.next ./checkout-app/.next",
    "dev:all": "npm run clean:next & npm run dev:remote & npm run dev:product & npm run dev:cart & npm run dev:checkout & npm run dev:host"
  },
  "keywords": [
    "nextjs",
    "module-federation",
    "monorepo",
    "segment",
    "analytics"
  ],
  "packageManager": "npm@10.5.0",
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/uuid": "^9.0.0",
    "concurrently": "^9.2.0",
    "turbo": "^2.5.5",
    "webpack": "^5.101.0"
  },
  "dependencies": {
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  }
}
